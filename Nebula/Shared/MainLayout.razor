@inherits LayoutComponentBase

<PageTitle>Nebula for Lyra Pay</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <UserLibrary.Components.TopBar />

        <article class="content px-4 fw">
            <ErrorBoundary @ref="errorBoundary">
                @Body
            </ErrorBoundary>            
        </article>
    </main>
</div>


@code {
    private ErrorBoundary errorBoundary;

    protected override void OnParametersSet()
    {
        errorBoundary?.Recover();
    }
}