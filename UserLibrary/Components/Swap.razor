@namespace UserLibrary.Components

@using AntDesign
@using CoinGecko.Clients
@using CoinGecko.Interfaces
@using Fluxor
@using Lyra.Core.API
@using Lyra.Core.Blocks
@using Lyra.Data.API
@using Lyra.Data.Crypto
@using Microsoft.Extensions.Configuration
@using Nebula.Store.WebWalletUseCase
@inject IConfiguration Configuration
@inject ILyraAPI lyraClient
@inject MessageService _message

<div class="swc">

<table cellspacing="0" cellpadding="0" class="swt">


    <tr>
        <td>From</td> 
        <td>Balance: @($"{balance1:N8}")</td>
    </tr>
    <tr>
        <td><div class="round">
            <AntDesign.Input TValue="decimal" Style="width: 100px; background: white;" 
            Bordered="false"
            Placeholder="Enter an amount" @bind-Value="@amount1" OnChange="@updateBtn1" />
            </div>
        </td>
        <td>
            <div class="round">
            <AntDesign.Select DataSource="@tickers"
                    @bind-Value="@selectedTicker1"
                    Style="width:200px; background: white;"
                    Bordered="false"
                    OnSelectedItemChanged="OnSelectedItemChangedHandler1">
            </AntDesign.Select>
            </div>
        </td>
    </tr>
    <tr>
        <td><AntDesign.Button Type="@AntDesign.ButtonType.Text" Shape="@AntDesign.ButtonShape.Circle"           
            OnClick="@DoSwapTicker">
            <AntDesign.Icon Type="sync" Theme="outline" Style="font-size: x-large;"/>   
        </AntDesign.Button>
        </td>
        <td align="right"><AntDesign.Icon Type="setting" Theme="outline" Style="font-size: x-large;" /></td>
    </tr>
    <tr>
        <td>To</td>
        <td>Balance: @($"{balance2:N8}")</td>
    </tr>
    <tr>
        <td><div class="round">
            <AntDesign.Input TValue="decimal" Style="width: 100px; background: white;" 
            Bordered="false"
            Placeholder="Enter an amount" @bind-Value="@amount2" OnChange="@updateBtn2" />
            </div>
        </td>
        <td>
            <div class="round">
            <AntDesign.Select DataSource="@tickers"
                    @bind-Value="@selectedTicker2"
